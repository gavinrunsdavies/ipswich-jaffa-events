
{{#paper-toolbar}}
  {{#paper-toolbar-tools}}
  {{#paper-menu as |menu|}}
     {{#menu.trigger}}
		{{#paper-button iconButton=true}}
		  {{paper-icon "menu"}}
		{{/paper-button}}
	{{/menu.trigger}}
	{{#menu.content width=4}}
    {{#content.menu-item}}
      {{paper-icon "local_phone"}}	  
      <span>About</span>
    {{/content.menu-item}}
	  {{#content.menu-item}}
      {{paper-icon "local_phone"}}	  
      <span>Enter</span>
    {{/content.menu-item}}
	  {{#content.menu-item}}
      {{paper-icon "local_phone"}}
      <span>Gallery</span>
    {{/content.menu-item}}

    {{paper-divider}}

